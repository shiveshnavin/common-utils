{
  "compilerOptions": {
    "strict": false,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "index.ts",
    "models/**/*",
    "utils/**/*",
    "middlewares/**/*.html", "middlewares/auth/login.html.ts",
  ]
}