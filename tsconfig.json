{
  "compilerOptions": {
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "index.ts",
    "models/**/*",
    "utils/**/*"
  ]
}